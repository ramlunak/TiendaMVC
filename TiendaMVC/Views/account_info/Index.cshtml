@model IEnumerable<TiendaMVC.Class.customer_info>

@{
    ViewBag.Title = "Asociados";

}


<div class="btn btn-success btn-sm"> @Html.ActionLink("Agregar", "Create",null, new { Style = "color:white" }) </div>
<br />
@if (Model.Count() != 0)
{
    <div class="table table-responsive">
        <table class="table">
            <tr>

                <th>
                    @Html.DisplayName("Nombre")
                </th>
                <th>
                    @Html.DisplayName("Usuario")
                </th>
                <th>
                    @Html.DisplayName("Impuesto")
                </th>
                <th>
                    @Html.DisplayName("Crédito inicial")
                </th>
                <th>
                    @Html.DisplayName("Balance")
                </th>
                <th>
                    @Html.DisplayName("Fondos")
                </th>


                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                               
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.fullname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.login)
                </td>
                <td>
                    @item.GetComisionTopUp()%
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.credit_limit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.balance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fondosDisponibles)
                </td>


                <td>
                    <div class="btn btn-success btn-xs"> @Html.ActionLink("Actualizar", "Edit", new { id = item.i_customer }, new { Style = "color:white" }) </div>
                    @*<div class="btn btn-danger btn-xs"> @Html.ActionLink("Resetear", "Reset", new { id = item.i_customer }, new { Style = "color:white" }) </div>*@

                </td>
            </tr>
            }

        </table>
    </div>
}
else
{
    <strong>No tiene ninguna tienda asociada.</strong>
}

