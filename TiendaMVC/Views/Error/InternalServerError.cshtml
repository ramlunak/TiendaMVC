@{
    ViewBag.Title = "Error";
}

<div class="error-page">
    <h2 class="headline text-red">500</h2>

    <p>
        There was an error processing your request. Please, try again.<br>
        If the problem persists, contact support.
    </p>

    <div class="error-content">
        <h3><i class="fa fa-warning text-red"></i> Oops! Something went wrong.</h3>
        <h3><i class="fa fa-warning text-red"></i> @Session["exception"]</h3>
        <h3><i class="fa fa-warning text-red"></i> @Session["StackTrace"]</h3>



    </div>
</div>