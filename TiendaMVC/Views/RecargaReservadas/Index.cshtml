@model IEnumerable<TiendaMVC.Models.RecargaTienda>

@{

    Layout = null;
}
<div class="table table-responsive">
    <table class="table">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Monto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Costo)
            </th>
            <th>
                Fecha
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                +@Html.DisplayFor(modelItem => item.CodigoPais)@Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Monto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Costo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                <div class="btn btn-danger btn-xs"> @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { Style = "color:white" }) </div>
            </td>
        </tr>
        }

    </table>
</div>

