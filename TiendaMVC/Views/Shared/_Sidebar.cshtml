        </li>

            @{
                if ((TipoTienda)Session["TipoTienda"] == TipoTienda.Padre)
                {
                    <li class="@Url.IsLinkActive("Index", "account_info")">
                        <a href="@Url.Action("Index", "account_info")"><i class="fa fa-link"></i> <span>Asociados</span></a>
                    </li>
                }
            }

            @{
                if ((TipoTienda)Session["TipoTienda"] == TipoTienda.Padre)
                {
                    <li class="@Url.IsLinkActive("Index", "Facturacion")">
                        <a href="@Url.Action("Index", "Facturacion")"><i class="fa fa-link"></i> <span>Facturación</span></a>
                    </li>
                }
            }

            @{
                if ((TipoTienda)Session["TipoTienda"] == TipoTienda.Padre)
                {
                    if (((customer_info)Session["CurrentCustomer"]).EnabledPromociones)
                    {
                        <li class="@Url.IsLinkActive("Index", "Campaign")">
                            <a href="@Url.Action("Index", "Campaign")"><i class="fa fa-link"></i> <span>Promociones</span></a>
                        </li>
                    }

                }
