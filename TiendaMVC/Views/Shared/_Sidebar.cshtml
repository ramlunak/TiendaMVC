            @{
                if ((TipoTienda)Session["TipoTienda"] == TipoTienda.Hijo)
                {
                    if (((customer_info)Session["CurrentAccont"]).EnabledPromociones)
                    {
                        <li class="@Url.IsLinkActive("Index", "Campaign")">
                            <a href="@Url.Action("Index", "Campaign")"><i class="fa fa-link"></i> <span>Promociones</span></a>
                        </li>
                    }
                }
            }

            <li class="@Url.IsLinkActive("HistoriaL", "RecargaTiendas")">
