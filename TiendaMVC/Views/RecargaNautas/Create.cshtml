@model TiendaMVC.Models.RecargaNauta
@using TiendaMVC.Class
@using System.Threading.Tasks;

@{
    ViewBag.Title = "Recarga Nauta";
    var CurrentCustomer = (customer_info)Session["CurrentCustomer"];

    int RecargaNautaSaveChangesResul = 0;
    var nauta = "@nauta.com.cu";

    if (Session["RecargaNautaError"] != null)
    {
        <div class="alert alert-error alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong> @Session["RecargaNautaError"]</strong>
        </div>

        Session["RecargaNautaError"] = null;
    }
}

@using (Html.BeginForm())

{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <table class="table" align="left" style="max-width:500px" cellspacing="0">
        <tr>
            <td>

                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-dollar"></i>
                    </div>
                    <select id="Monto"
                            name="Monto"
                            title="Seleccionar Monto"
                            class="selectpicker form-control"
                            data-show-subtext="true"
                            data-live-search="true">

                        <option value="5">5 CUC</option>
                        <option value="10">10 CUC</option>
                        <option value="12">12 CUC</option>
                        <option value="14">14 CUC</option>
                        <option value="15">15 CUC</option>
                        <option value="16">16 CUC</option>
                        <option value="18">18 CUC</option>
                        <option value="20">20 CUC</option>
                        <option value="25">25 CUC</option>
                        <option value="30">30 CUC</option>
                        <option value="35">35 CUC</option>
                        <option value="40">40 CUC</option>
                        <option value="45">45 CUC</option>
                        <option value="50">50 CUC</option>


                    </select>
                </div>
                @Html.ValidationMessageFor(model => model.Monto, "", new { @class = "text-danger" })

            </td>
        </tr>
        <tr>
            <td>

                <div class="input-group">
                    <input id="Numero" name="Numero" type="text" placeholder="Usuario" class="form-control">
                    <div class="input-group-addon">
                        <i id="prefijo">@nauta</i>

                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.Numero, "", new { @class = "text-danger" })

            </td>
        </tr>
        <tr>
            <td colspan="2" align="center">
                <input type="button" style="width:100%;margin-top:10px" accesskey="13" onclick="CrearGrid();" value="Agregar a la Lista" class="btn btn-sm bg-green-active" />

            </td>
        </tr>
    </table>


}

<div>
    @{Html.RenderAction("Index");}
</div>
<script src="~/Content/js/plugins/jquery/jquery-3.3.1.min.js"></script>
<script type="text/javascript" src="~/Content/js/MyJS.js"></script>
<script type="text/javascript">

    $(document).ready(function () {


        $("#NumeroRemitente").keydown(function (event) {

            if (event.shiftKey) {
                event.preventDefault();
            }

            if (event.keyCode == 46 || event.keyCode == 8) {
            }
            else {
                if (event.keyCode < 95) {
                    if (event.keyCode < 48 || event.keyCode > 57) {
                        event.preventDefault();
                    }
                }
                else {
                    if (event.keyCode < 96 || event.keyCode > 105) {
                        event.preventDefault();
                    }
                }
            }
        });

    });
</script>